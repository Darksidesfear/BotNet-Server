        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BotNet_Server_UI"
        mc:Ignorable="d"
        Height="150" Width="200" ResizeMode="NoResize" WindowStyle="None" Opacity="0.5" Loaded="Window_Loaded">
