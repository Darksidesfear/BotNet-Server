<Window x:Class="BotNet_Server_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BotNet Server UI by Zerumi" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
        <TextBox x:Name="LogPanel" HorizontalAlignment="Left" Height="400" Margin="506,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="276" FontSize="16" IsReadOnlyCaretVisible="True"/>
        <Button Content="Запустить сервер" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="129" Height="32" Click="Connect_Click"/>
        <Label x:Name="ServerLabel" Content="Запустите сервер" HorizontalAlignment="Left" Margin="10,47,0,0" VerticalAlignment="Top" Width="300" Height="28"/>
        <TextBox x:Name="Command" HorizontalAlignment="Left" Height="23" Margin="63,387,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="358" KeyDown="Command_KeyDown"/>
        <Button x:Name="SendButton" Content="Отправить" HorizontalAlignment="Left" Margin="426,387,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Команда" HorizontalAlignment="Left" Margin="10,387,0,0" VerticalAlignment="Top" Height="22" Width="58" FontSize="10"/>
        <Label Content="IP-Адрес" HorizontalAlignment="Left" Margin="10,365,0,0" VerticalAlignment="Top" Height="22" Width="53" FontSize="10"/>
        <TextBox x:Name="IP" HorizontalAlignment="Left" Height="23" Margin="63,364,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="145"/>
    </Grid>
</Window>
